<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<!-- 	Ovo je da bude centrirano -->
		<br>
		<h1>Update product</h1>
		<br>
		<% if @product.errors.any? %>
			<div class="alert alert-danger">
				<% @product.errors.full_messages.each do |error| %>
					<p><%= error %></p>
				<% end %>
			</div>
		<% end %>

		<%=  form_for @product do |form| %>
			<%= form.label :name %>
			<%= form.text_field :name, class: 'form-control' %>
			<br>
			<%= form.label :price %>
			<%= form.text_field :price, class: 'form-control' %>
			<br>
			<%= form.label :description, 'Description (optional)' %>
			<%= form.text_field :description, class: 'form-control' %>
			<br>
			<%= form.label :seller_id %>
			<%= form.collection_select :seller_id, Seller.all, :id, :name, { prompt: 'Choose seller' }, class: 'form-control' %>

			<%= form.submit 'Update', class: 'btn btn-block btn-default' %>
		<% end %>

	</div>
</div>