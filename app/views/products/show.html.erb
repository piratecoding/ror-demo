<div class="row">
	<div class="col-md-6">

	<table class="table table-striped">
	<thead>
		<tr>
			<th>
				<strong>Name: </strong>
			</th>	
			<th>
				<strong>Price: </strong>
			</th>
			<th>
				<strong>Category: </strong>
			</th>
			<th>
				<strong>Description: </strong>
			</th>
		</tr>
	</thead>
	<tbody>
		<td>
			<%= @product.name %>
		</td>
		<td>
			<%= @product.price %>
		</td>
		<td>
			<%= @product.category.name %>
		</td>
		<td>
			<%= @product.description %>
		</td>
	</tbody>
</table>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-sm btn-primary' %> |
