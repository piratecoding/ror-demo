<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<br>
		<h1>Login</h1>
		<br>

		<%= display_flash :error %>

		<%= form_tag session_path, method: :post do %>

			<%= label_tag :username %>
			<%= text_field_tag :username, nil, class: 'form-control' %>
			<br>

			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: 'form-control' %>
			<br>

			<%= submit_tag 'Login', class: 'btn btn-block btn-default' %>
		<% end %>


	</div>
</div>