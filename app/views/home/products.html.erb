<h1>All products</h1>

<table class="table table-condensed">
  <thead>
    <tr>
    	<th>Id</th>
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>

 <tbody>
   <% @products.each do |product| %>
     <tr>
     	<td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
    </tr>
   <% end %>
 </tbody>




